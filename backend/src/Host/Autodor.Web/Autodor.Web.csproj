<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <!-- Copy .env only if it exists (for local development) -->
    <None Update=".env" Condition="Exists('.env')">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="DotNetEnv" />
    <PackageReference Include="MediatR" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" />
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup Label="NuGet Package References">
    <PackageReference Include="Shared.Abstractions" />
    <PackageReference Include="Shared.Infrastructure" />
    <PackageReference Include="Shared.Users.Domain" />
    <PackageReference Include="Shared.Users.Application" />
    <PackageReference Include="Shared.Users.Infrastructure" />
    <PackageReference Include="Shared.Infrastructure.Generators" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Shared\Autodor.Shared.Contracts\Autodor.Shared.Contracts.csproj" />
    <ProjectReference Include="..\..\Modules\Contractors\Autodor.Modules.Contractors.Application\Autodor.Modules.Contractors.Application.csproj" />
    <ProjectReference Include="..\..\Modules\Orders\Autodor.Modules.Orders.Application\Autodor.Modules.Orders.Application.csproj" />
    <ProjectReference Include="..\..\Modules\Products\Autodor.Modules.Products.Application\Autodor.Modules.Products.Application.csproj" />
    <ProjectReference Include="..\..\Modules\Invoicing\Autodor.Modules.Invoicing.Application\Autodor.Modules.Invoicing.Application.csproj" />
    <ProjectReference Include="..\..\Modules\Contractors\Autodor.Modules.Contractors.Infrastructure\Autodor.Modules.Contractors.Infrastructure.csproj" />
    <ProjectReference Include="..\..\Modules\Orders\Autodor.Modules.Orders.Infrastructure\Autodor.Modules.Orders.Infrastructure.csproj" />
    <ProjectReference Include="..\..\Modules\Products\Autodor.Modules.Products.Infrastructure\Autodor.Modules.Products.Infrastructure.csproj" />
    <ProjectReference Include="..\..\Modules\Invoicing\Autodor.Modules.Invoicing.Infrastructure\Autodor.Modules.Invoicing.Infrastructure.csproj" />
  </ItemGroup>

  <Target Name="GenerateEnvFile" AfterTargets="Build" Condition="'$(Configuration)' == 'Debug'">
    <Exec Command="dotnet tool run shared env generate -p $(MSBuildProjectDirectory) -o $(MSBuildProjectDirectory)\.env.example -c $(Configuration) -f" />
  </Target>

</Project>
